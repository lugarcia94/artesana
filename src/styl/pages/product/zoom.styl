.product__zoom
    width: 100%
    max-width: 450px
    position relative
    display: flex
    flex-wrap: wrap

    @media(max-width: 1250px)
        max-width 45%

    @media(max-width: 992px)
        max-width 100%
  
    .verDetalhes
        display: none

    .etiqueta__produto
        z-index: 1    

        #fbits-div-preco-off
            display: block!important
            

.product__price
    .fbits-comprar 
        display: none


.fbits-componente-imagem
    max-width 530px

    iframe 
        width 100%

    @media(max-width: 1250px)
        max-width 100%

    @media(max-width 991px)
        margin: 0 auto
 
.jcarousel
    overflow initial !important
#galeria 
    
    .slick-next, .slick-prev 
        position: absolute
        background-color: transparent

    .slick-arrow
        width 85px!important
        height 30px
        background-size: auto !important
    .slick-next
        width: 20px !important
        bottom -20px
        right -20px !important
        font-size: 0
        background-image: url('data:image/svg+xml;base64,')!important
        background-position: center
        @media(max-width: 992px)
            right -20px!important 
            bottom: 0!important 
            top: 48%

    .slick-prev
        bottom -20px
        left: -55px !important
        font-size: 0
        background-image: url('data:image/svg+xml;base64,')!important
        background-position: center
