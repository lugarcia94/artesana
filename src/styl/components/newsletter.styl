.footerNews    
    margin: 0 !important
    padding 40px 0 !important
    background-color: $cor01 !important
    .news.left
        display none
    .txtNews.left
        width: initial
        display: flex
        flex-wrap: wrap
        span
        strong
            font-size: 20px
            text-transform uppercase
        strong 
            font-weight 800
            margin-right: 5px;
        span 
            font-weight: 400
    .centerContent
        display flex
        justify-content: center
        flex-wrap: wrap
        align-items: center
        max-width 650px
        margin 0 auto
        float: none !important
    .newsletter-box
        display flex
        input[type="text"]
            width: 455px
        #Nome
            display: none
    @media(max-width 1290px)
        .centerContent
            max-width 991px
        .right.footerNewsForm
            float: none !important
            width: 100%
            max-width 100%
            .newsletter-box
                justify-content: center;
            input.btNews
                margin 10px auto
                float none
                font-size: 0 !important
                &:before
                    content: 'Enviar'
                    font: 12px
                    text-transform uppercase
    @media(max-width 480px)
        .newsletter-box
            flex-wrap: wrap
            input
                width: 100%
                display block


.newsletter
    background-color: $cor01 !important
    padding: 15px

    @media(max-width 991px)
        padding 20px 15px
    
    &__container
        max-width: 1330px
        padding: 0 0.94rem
        width: 100%
        margin: 0 auto
        
    &__wrapper
        display: flex
        align-items: center
        justify-content: space-between
        min-height 85px
        @media(max-width : 1199px)
            flex-wrap: wrap
            justify-content: center
    &__title
        font-size: 18px
        color: #ffffff
        font-weight: bold
        line-height: 20px
        text-transform uppercase
        display flex
        flex-wrap: wrap
        margin 0
        max-width: 400px


        span
            text-transform none
            font-weight: 400
            font-size: 14px
            display: block
        @media(max-width : 1199px)
            margin-bottom: 15px
            text-align: center
    .footerNewsForm
        float: none

        display: flex
        align-items: center
        justify-content: space-between
        padding 0
        @media(max-width : 1199px)
            width: 100%
        @media(max-width : 810px)
            flex-wrap: wrap
        input[type="text"]
            float: none
            width: 47.827%
            margin: 0
            border: 1px solid #E7E7E7

            @media(max-width : 810px)
                width: 100%
                margin-bottom: 12px
                text-align: center
        input.btNews
            margin 10px auto
            float none
            &:before
                content: 'Enviar'
                font: 12px
                text-transform uppercase
    .newsletter-box + .newsletter-box
        display: none
    .newsletter-box
        width: 71.177%
        display: flex
        align-items: center
        justify-content: space-between
        @media(max-width : 810px)
            flex-wrap: wrap
            width: 100%
    .btNews
        float: none
        margin: 0
        background:$cor01 
        font-size: 13px
        font-weight: 800
        height 40px
        width 25%!important
        color #fff
        @media(max-width : 810px)
            width: 100%!important

    

.icon__news
    &:before
        content: ''
        background-image: url('data:image/png;base64,')
        background-repeat: no-repeat
        width: 50px
        height: 35px
        display: block
        margin-right 5px


.row-fbits-news.footerNewsletter
    max-width: 1030px
    .centerContent
        display: flex !important
        justify-content: space-between
        max-width: 100%
        .news-left
            flex: 0 1 290px
            .title-news
                h3
                    font-size: 25px
                    font-weight: 800
                    color: #fff
                    margin 0
                    margin-bottom 15px
            .txtNews 
                font-size: 14px
                color: #ffffff
                text-align: left
                line-height: 18px
                margin 0
        .footerNewsForm
            width: initial 
            flex: 0 1 715px
            display: flex 
            justify-content: space-between
            align-items: center
            margin-top 25px
            input[type="text"]
                margin 0 10px !important
                background-color: #066db1
                border: 1px solid #009af0
                border-radius: 5px
                color: #fff !important
                &::placeholder
                    color: #fff !important
            .btNews
                background-color: #fff
                border: 1px solid #009af0
                border-radius: 5px
                font-size: 14px
                color $cor01
                padding 0
                width: 85px
                text-align center