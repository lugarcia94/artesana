.tool
    &__calc
        width 100%
        display: flex
        justify-content: flex-start
        height 40px
        margin-top: 30px
        margin-bottom: 20px
        & > div 
            flex: 0 0  auto
            margin-right: 15px
        &-left
            display: flex
            justify-content: flex-start
            align-items: center
            color: #4e4e4e;
            font-family: Exo;
            font-size: 12px;
            font-weight: 700;
            & .factor 
                margin-left: 5px
            & .calc-qtd
                margin-right: 5px
                & input
                    width: 90px
                    height: 40px;
                    border-radius: 4px;
                    border: 1px solid #e1e1e1;
                    background-color: #ffffff;
                    &::placeholder 
                        color: #808080;
                        font-family: Exo;
                        font-size: 14px;
                        font-weight: 400;
                        letter-spacing: 0.7px;

        &-right
            display: flex
            align-items: center
            height 40px
            justify-content: flex-start
            & > button 
                width: 98px;
                height: 40px;
                border-radius: 4px;
                background-color: #0080c7;
                color: #ffffff;
                font-family: Exo;
                font-size: 12px;
                font-weight: 700;
                text-transform: uppercase;
                margin-left: 10px
                &:hover 
                    background-color: #00A6FF
            & > div 
                flex: 0 0 110px
                height 40px
                border-radius: 4px;
                border: 1px solid #e1e1e1;
                background-color: #ffffff;
                padding: 10px
                box-sizing: border-box
                color: #4c4c4c;
                font-family: Exo;
                font-size: 10px;
                font-weight: 600;
                display: flex
                align-items: center
                & input 
                    appearance none
                    width: 15px
                    height 15px
                    border: 1px solid #7f7f7f
                    border-radius: 7.5px
                    background-color: #FFFFFF
                    margin-right: 10px
                    position relative
                    &:checked  
                        border-color: #e58822
                        border-width: 2px
                        background-color: #000000

